.create-game
	.outer
		width: 100%
	
		h1, h2, h3
			vertical-align: middle
			color: white
			font-style: italic
			text-align: center
			padding: 0px
			margin: 0px
			text-shadow: #333 0px 3px 7px

		h1
			font-size: 2em
			display: block
		h2
			font-size: 1.5em
			display: inline-block
			padding-left: 20px
		h3
			font-size: 1em


		.info
			vertical-align: middle
			display: inline-block
			height: 30px
			width: 30px

			background: url('img/info.png') no-repeat 50% 50%
			background-size: 100% 100%

		td
			text-align: center

	
		table.options
			margin: auto auto
			border-spacing: 2px 10px
			width: 100%
			
			td
				text-align: center


			.opponent
				font-size: 1.5em

			.size
				display: block
				text-align: center
				padding: 0px
				margin: 15px 0px 0px 0px
			

			input.handicap
				width: 60px


		table.submit
			height: 60px
			border-spacing: 10px


		table.friends
			width: 90%
			min-width: 260px
			margin: auto auto
			border-spacing: 2px 10px

			div.friend
				position: relative
				top: 0px
				left: 0px

				table
					width: 100%
					background: white
					border: 2px solid black
					padding: 5px
					
					.avatar
						width: 80px
						
						img
							width: 80px
							height: 80px

						
					.username
						font-size: 2em
						text-align: left
						
					.rank
						font-family: sans-serif
						text-align: left


				.star
					display: inline-block
					width: 30px
					height: 30px
					position: absolute
					right: 30px
					top: 38px

					&.selected
						background: url('img/star-selected.png') no-repeat 50% 50%
						background-size: 100%

					&.unselected
						background: url('img/star-unselected.png') no-repeat 50% 50%
						background-size: 100%


	table.search-results
		width: 90%
		margin: auto auto
		border-spacing: 2px 10px
		
		div.result
			position: relative
			top: 0px
			left: 0px
			
			table
				width: 100%
				background: white
				border: 2px solid black
				padding: 5px
				
				.avatar
					width: 80px
					
					img
						width: 80px
						height: 80px
					
				.username
					font-size: 2em
					text-align: left
					
				.rank
					font-family: sans-serif
					text-align: left

			.star
				display: inline-block
				width: 30px
				height: 30px
				position: absolute
				right: 30px
				top: 38px


				&.selected
					background: url('img/star-selected.png') no-repeat 50% 50%
					background-size: 100%

				&.unselected
					background: url('img/star-unselected.png') no-repeat 50% 50%
					background-size: 100%


.create-game, table.opponent-info

	span.button
			height: 60px
			width: 60px
			line-height: 60px
			background: url('img/circle-button.png') no-repeat 50% 50%
			background-size: 100% 100%
			border: none
			display: inline-block
			vertical-align: middle

	.button div
		width: 60px
		height: 60px

	.favs
		background: url('img/friends.png') no-repeat 50% 20%
		background-size: 90%

	.random
		background: url('img/random.png') no-repeat 50% 50%
		background-size: 80% 80%

	.search
		background: url('img/search.png') no-repeat 50% 50%
		background-size: 75% 75%

	.ai
		background: url('img/android.png') no-repeat 50% 50%
		background-size: 75% 75%
