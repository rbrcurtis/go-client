.board

	#peace-box
		width: 320px
		min-height: 50px
		border-bottom: 1px solid black
		margin-left: auto
		margin-right: auto

		button
			width: 100%
			height: 100%
			max-width: 100%

	.header
		position: relative
		width: 95%
		margin: 10px auto 0 auto
		border-spacing: 2px 10px

		table
			width: 300px
			background: white
			border: 2px solid black
			margin: 0px auto
			padding: 5px

			
			td
				width: 60px
				text-align: center

				*
					width: 30px
					height: 30px
					vertical-align: middle
					display: inline-block

				// img.avatar
					
				.color

					&.black
						background: url('img/stone-black.png') no-repeat 50% 50%
						background-size: 100%

					&.white
						background: url('img/stone-white.png') no-repeat 50% 50%
						background-size: 100%

				.star

					&.selected
						background: url('img/star-selected.png') no-repeat 50% 50%
						background-size: 100%

					&.unselected
						background: url('img/star-unselected.png') no-repeat 50% 50%
						background-size: 100%

				.confirm
					background: url('img/checkmark.png') no-repeat 50% 50%
					background-size: 100%

					&.highlight
						background: url('img/checkmark-highlight.png') no-repeat 50% 50%
						background-size: 100%


				.left
					background: url('img/left.png') no-repeat 50% 50%
					background-size: 50%

				.right
					background: url('img/right.png') no-repeat 50% 50%
					background-size: 50%

	.toggle
		padding: 0px
		width: 300px
		background: white
		border: 2px solid black
		margin: 10px auto

		td
			text-align: center
			padding: 5px
			margin: 0px

		.board, .chat
			cursor: pointer

		.selected
			background: grey



	#zoom-wrapper
		overflow: auto
		margin: 5px 0px

		table#game-board
			width:100%
			tr	
				td
					// border: 1px solid black
					background: url('img/bg.png') no-repeat
					background-position: 0% 0%
					background-size: 100% 100% !important
					text-align: center
					vertical-align: middle
					
					&:first-child
						background: url('img/bg-west.png') no-repeat
				
					&:last-child
						background: url('img/bg-east.png') no-repeat
			
				&:first-child td
					background: url('img/bg-north.png') no-repeat
			
					&:first-child
						background: url('img/bg-nw.png') no-repeat
			
					&:last-child
						background: url('img/bg-ne.png') no-repeat
						
				&:last-child td
					background: url('img/bg-south.png') no-repeat
			
					&:first-child
						background: url('img/bg-sw.png') no-repeat
					
					&:last-child
						background: url('img/bg-se.png') no-repeat
			
			
			
			.white
				background: url('img/stone-white.png') no-repeat 49% 50%
				background-size: 75%

			.black
				background: url('img/stone-black.png') no-repeat 49% 50%
				background-size: 75%

			.selected-highlight
				border: 1px solid green
				border-radius: 50px

			.last
				border: 1px solid red
				border-radius: 50px

			
			
			.cell, .border
				height: 100%

	.zoom-controls
		width: 70%

		td
			text-align: center
			width: 50%
			margin: 0px
			padding: 0px

			.zoom-in, .zoom-out
				margin: 0px
				padding: 0px
				background: white
				font-size: 1.4em
				border: 1px solid black

			.zoom-in
				// -webkit-border-top-left-radius: 20px
				// -webkit-border-bottom-left-radius: 20px
				border-right: none

			.zoom-out
				// -webkit-border-top-right-radius: 20px
				// -webkit-border-bottom-right-radius: 20px

	*
		-webkit-border-vertical-spacing: 0px
		-webkit-border-horizontal-spacing: 0px

	table.chat-wrapper
		width: 300px

		margin: 0px auto
		border: 2px solid black
		background: white
		vertical-align: bottom

		td
			padding: 2px
			margin: 0px

			div.chats
				width: 300px
				max-height: 400px
				overflow: auto

				table
					width:100%

					.avatar
						width:20px
						height: 20px

		.fucker
			height: 2em

			.chat-input
				resize: none
				width: 300px
				height: 2.2em
				margin: 0px
				padding: 0px
				font-size: 1em
				position: relative
				top: 3px



