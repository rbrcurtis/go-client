
.panel.settings
	color: white

	table.settings
		width: 100%

		border-spacing: 0

		border-top: 1px solid white
		margin-top: 10px


		td
			text-align: center
			border-bottom: 1px solid white
			padding: 20px

		.avatar
			display: inline-block
			border: 1px solid black
			background: white
			border-spacing: 0px
			height: 110px
			width: 110px

			img
				margin: 5px

		

		input[type=input]
			width: 100px

		.notif
			cursor: pointer

			.check-img
				width: 2em
				height: 2em
				display: inline-block
				vertical-align: bottom
				margin-left: 10px
				background: url('img/checkbox-empty.png')
				background-size: 100% 100%

			&.checked .check-img
				background: url('img/checked-box.png')
				background-size: 100% 100%

		.realtime
			display: inline-block
			border: 1px solid black
			border-radius: 15px
			height: 20px
			width: 20px
			margin-left: 10px
			vertical-align: bottom

			&.connected
				background: #52b152

			&.disconnected
				background: red



		.donate
			cursor: pointer
